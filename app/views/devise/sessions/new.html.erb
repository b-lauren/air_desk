<div class="container margin-top log-in-form">
  <h2 class="pb-2 text-center">Log In</h2>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "border-radius-form" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "border-radius-form" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-submit">
    <div class="form-actions pb-2">
      <%= f.button :submit, "Log In", class: "btn sign-up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
