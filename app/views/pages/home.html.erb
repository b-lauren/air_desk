
<!-- main section -->

<section class="container-fluid px-0">
  <div class="row text-center align-items-center">
    <div class="col-lg-6">
      <div class="d-none d-lg-block">
         <h1>A workspace near you</h1>
         <p class="text-center">Find the perfect workspace nearby and access unique and stylish work environments to suit your needs</p>
         <button type="button" class="btn sign-up mt-2">See Listings</button>
      </div>
    </div>
    <div class="col-lg-6">
      <img class="img-fluid" src="https://images.unsplash.com/photo-1595846723416-99a641e1231a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1051&q=80" alt="home office">
    </div>
  </div>
</section>

<!-- Listing Section -->



<div class="container">
  <div class="cards rounded card-img-top">
  <% @listings.first(6).each do |listing| %>
    <div class="card text-center" style="width: 19rem;">
      <%= cl_image_tag listing.photos[0].key, width: 302, height: 200, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to listing.title.capitalize, listing_path(listing) %> </h5>
         </div>
    </div>
  <% end %>
</div>
